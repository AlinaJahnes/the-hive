<%= render 'mailbox/folders' %>

<% @collaborations.each do |x| %>
<%= x.project.title %>
<%= x.collaborator.username %>
<%= button_to 'Approve', project_collaboration_path(x.project, x), method: 'patch', params:{status: 'approved'} %>
<% end %>

<% if is_conversation %>
  <%= render 'conversations/form' %>
<% else %>
  <%= render partial: 'conversations/conversation', collection: messages %>
<% end %>
